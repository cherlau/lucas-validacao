.header-text
	display flex
	flex-direction column
	margin-bottom 1.5rem

/* título */
.header-text__title
	margin 0
	line-height 1.3
	font-weight 600
	color text-heading

/* subtítulo */
.header-text__subtitle
	margin 0.25rem 0 0
	font-size 0.875rem /* 14px default */
	font-weight 400
	color text-subheading

/* variações de tamanho */
.header-text--h1 .header-text__title
	font-size 18px
	font-weight 600

.header-text--h1 .header-text__subtitle
	font-size 12px

.header-text--h2 .header-text__title
	font-size 16px
	font-weight 600

.header-text--h2 .header-text__subtitle
	font-size 13px

.header-text--h3 .header-text__title
	font-size 14px
	font-weight 500

.header-text--h4 .header-text__title
	font-size 13px
	font-weight 500