.user-profile
	display flex
	align-items center
	cursor pointer
	position relative
	gap 10px

.user-avatar
	width 36px
	height 36px
	border-radius 50%
	object-fit cover
	border 2px solid #4ade80 /* Exemplo de status online */

.user-info
	display flex
	flex-direction column

.user-name
	font-size 12px
	font-weight 500
	color #002054

.user-role
	font-size 10px
	color #87a2c7
	line-height 5px

.dropdown-icon
	font-size 10px
	color #2d334c

.dropdown
	position absolute
	top 48px
	right 0
	background white
	border 1px solid #e5e7eb
	border-radius 6px
	padding 10px
	box-shadow 0 2px 6px rgba(0, 0, 0, 0.1)
	z-index 50