.accordion
	border 1px solid #dfe6f0
	border-radius 8px
	overflow hidden
	transition border-color 0.2s

/* QUANDO ABERTO */
.accordion.open
	border-color #adacff

.accordion-header
	width 100%
	padding 10px 14px
	background white
	border none
	outline none
	font-weight 500
	font-size 13px
	display flex
	justify-content space-between
	align-items center
	cursor pointer
	color #374151

/* linha separadora vira roxa quando aberto */
.accordion.open .accordion-header
	border-bottom 1px solid #adacff

.chevron
	color #5e5cf0
	transition transform 0.3s

.chevron.open
	transform rotate(180deg)

.accordion-content
	background #fbfdff
	border-top 1px solid #adacff
	padding 10px
	position relative
	font-family monospace

.accordion.open .accordion-content
	border-top none

.accordion-content pre
	margin 0
	font-size 13px
	color #111827
	white-space pre-wrap

.copy-btn
	position absolute
	bottom 8px
	right 8px
	padding 4px 10px
	border-radius 4px
	border none
	background transparent
	cursor pointer
	transition background 0.2s

.copy-btn:hover
	background #e5e7eb