.drawer-overlay
	position fixed
	top 0
	left 0
	right 0
	bottom 0
	background rgba(54, 60, 82, 0.4)
	z-index 9998
	backdrop-filter blur(2px)

/* Drawer */
.drawer
	position fixed
	top 0
	right 0
	bottom 0
	background-color #ffffff
	border 1px solid #dfe6f0
	box-shadow 0px 4px 28.4px rgba(37, 43, 67, 0.21)
	z-index 9999
	display flex
	flex-direction column
	border-radius 8px

/* Tamanhos */
.drawer-sm
	width 400px /* Overlay */

.drawer-md
	width 600px

.drawer-lg
	width 800px

.drawer-xl
	width 1000px

.drawer-full
	width 100%

/* Header */
.drawer-header
	display flex
	align-items flex-start
	justify-content space-between
	padding 35px 35px 40px 40px
	flex-shrink 0

.drawer-header-content
	flex 1

.drawer-title
	margin 0
	font-size 16px
	font-weight 600
	color #1e2339
	line-height 1.3

.drawer-subtitle
	margin 1px 0 0 0
	font-size 13px
	color #738cac
	line-height 15px

.drawer-icon
	background-color #5e5cf0
	width 44px
	height 44px
	display flex
	justify-content center
	align-items center
	border-radius 6px
	color #fff
	position absolute
	left -16px
	top 30px

.drawer-close
	display flex
	align-items center
	justify-content center
	width 32px
	height 32px
	border none
	background-color transparent
	border-radius 6px
	cursor pointer
	color #738cac
	transition all 0.2s ease
	flex-shrink 0
	margin-left 16px

.drawer-close:hover
	box-shadow 0px 4px 28.4px rgba(37, 43, 67, 0.21)

.drawer-close i
	font-size 18px

/* Body */
.drawer-body
	flex 1
	overflow-y auto
	padding 0px 35px 0px 40px

/* Footer */
.drawer-footer
	padding 20px 32px
	border-top 1px solid #dfe6f0
	background-color #f4fcff
	flex-shrink 0
	font-size 12px

/* Animações */
.fade-enter-active, .fade-leave-active
	transition opacity 0.3s ease

.fade-enter-from, .fade-leave-to
	opacity 0

.slide-enter-active, .slide-leave-active
	transition transform 0.3s ease

.slide-enter-from, .slide-leave-to
	transform translateX(100%)

/* Responsivo */
@media (max-width 768px)
	.drawer-sm, .drawer-md, .drawer-lg, .drawer-xl
		width 100%

	.drawer-header
		padding 20px

	.drawer-body
		padding 20px

	.drawer-footer
		padding 16px 20px