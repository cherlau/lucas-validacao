.modal-overlay
	position fixed
	top 0
	left 0
	right 0
	bottom 0
	background rgba(54, 60, 82, 0.4)
	z-index 9998
	backdrop-filter blur(2px)

/* Modal Wrapper */
.modal-wrapper
	position fixed
	top 0
	left 0
	right 0
	bottom 0
	display flex
	align-items center
	justify-content center
	z-index 9999
	padding 20px

/* Modal */
.modal
	background-color #ffffff
	border 1px solid #dfe6f0
	box-shadow 0px 4px 28.4px rgba(37, 43, 67, 0.21)
	border-radius 8px
	display flex
	flex-direction column
	max-height 90vh
	position relative

/* Tamanhos */
.modal-sm
	width 100%
	max-width 400px

.modal-md
	width 100%
	max-width 600px

.modal-lg
	width 100%
	max-width 800px

.modal-xl
	width 100%
	max-width 1000px /* Overlay */

.modal-full
	width 95%
	max-width none

/* Header */
.modal-header
	display flex
	align-items flex-start
	justify-content space-between
	padding 40px 35px 35px 40px
	flex-shrink 0
	position relative

.btn-close
	position absolute
	top 20px
	right 20px

.modal-title
	margin 0
	font-size 16px
	font-weight 600
	color #1e2339
	line-height 1.3

.modal-subtitle
	margin 1px 0 0 0
	font-size 13px
	color #738cac
	line-height 15px

.modal-icon
	background-color #5e5cf0
	width 44px
	height 44px
	display flex
	justify-content center
	align-items center
	border-radius 6px
	color #fff
	position absolute
	left 30px
	top -23px
	flex-shrink 0

/* Body */
.modal-body
	flex 1
	overflow-y auto
	padding 0px 35px 30px 40px

/* Footer */
.modal-footer
	padding 20px 32px
	border-top 1px solid #dfe6f0
	background-color #f4fcff
	flex-shrink 0
	font-size 12px

/* Animações */
.fade-enter-active, .fade-leave-active
	transition opacity 0.3s ease

.fade-enter-from, .fade-leave-to
	opacity 0

.zoom-enter-active, .zoom-leave-active
	transition all 0.3s ease

.zoom-enter-from, .zoom-leave-to
	opacity 0
	transform scale(0.9)

/* Responsivo */
@media (max-width 768px)
	.modal-wrapper
		padding 10px

	.modal-sm, .modal-md, .modal-lg, .modal-xl, .modal-full
		width 100%
		max-width none
		max-height 95vh

	.modal-header
		padding 20px 20px 25px 20px

	.modal-icon
		left 20px
		top 20px
		width 40px
		height 40px

	.modal-header-content
		padding-left 55px

	.modal-body
		padding 0px 20px 20px 20px

	.modal-footer
		padding 16px 20px
