
.ui-select
	position relative
	z-index auto
	width 100%

	&:last-child
		margin-bottom 0

	> .label
		font-size 12px
		font-weight 500
		display flex
		color #333
		margin-bottom 6px
		line-height 12px
		justify-content space-between

	.label-right
		font-size 10px
		color #a9acb1

	.tooltip
		margin-left 5px

	.tooltip-icon
		position relative

	.tooltip-icon .tooltip-text
		visibility hidden
		width 150px
		background-color #FFFFFF
		color #606D84
		font-size 11px
		font-weight 500
		text-align center
		border-radius 6px
		padding 5px 10px
		position absolute
		z-index 100
		top -16px
		right 22px
		margin-left -60px
		box-shadow 0px 1px 4px rgba(0, 0, 0, 0.25)
		border-radius 3px
		font-family -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol', 'Noto Color Emoji'

	.tooltip-icon .tooltip-text::after
		transform rotate(-90deg)
		top 27%
		right -18px
		content ''
		position absolute
		margin-left -5px
		border-width 10px
		border-style solid
		border-color #FFFFFF transparent transparent transparent

	.tooltip-icon:hover .tooltip-text
		visibility visible

	.label-required
		color #f00
		font inherit
		display inline !important

	.observation-message
		font-size 10px
		color #f00
		position absolute

	.ui-select-box
		z-index 1
		position relative
		min-width 100px

		.selected
			position relative
			padding 0 30px 0 15px
			border 1px solid #D8E3EF
			background #FFF
			text-transform capitalize
			overflow hidden
			text-overflow ellipsis
			white-space nowrap
			font-size 13px
			cursor pointer
			border-radius 4px
			user-select none
			color #333
			line-height 38px // Exemplo para tamanho md

			&.disabled
				opacity 0.6
				cursor not-allowed
				pointer-events none

			&.error
				border 1px #f00 solid

			&::after
				position absolute
				top 50%
				right 15px
				display inline-block
				margin-top -2px
				width 0
				height 0
				border-top 4px solid #0B85FD
				border-right 4px solid transparent
				border-left 4px solid transparent
				content ''
				vertical-align middle

		.options
			position absolute
			left 0
			width 100%
			border 1px solid #D8E3EF
			border-radius 0 0 5px 5px
			background #FFF
			box-shadow 0 5px 8px 0 rgba(80, 80, 100, 0.1)

			.search
				.search-box
					display flex
					border 1px solid #D8E3EF
					background #FFF
					border-radius 3px
					align-items center

					input
						width 100%
						height 40px
						padding 0 12px
						background transparent
						font-size 12px
						border none

					.icon
						width 35px
						flex-shrink 0
						display flex

						.fal
							height 30px
							width 30px
							display inline-block
							border-radius 3px
							cursor pointer
							color white
							font-size 15px
							line-height 31px
							text-align center
							background-color #0B85FD

							&:hover
								background-color lighten(#0B85FD, 10%)

			.search--top
				padding 10px 10px 0

			.search--bottom
				padding 0 10px 10px

			.list-control
				display flex
				justify-content space-between
				padding 0 10px 10px 10px

				button
					background transparent
					border none
					color #566889
					padding 0
					text-decoration underline
					cursor pointer
					font-size 11px
					white-space nowrap

			.list
				padding 10px

				h4
					font-size 13px
					margin-top 15px
					margin-bottom 10px
					color #0B85FD
					font-weight 500

					&:first-child
						margin-top 0

				.items
					max-height 140px
					overflow-y auto
					padding 10px
					background #F7FBFD
					border 1px solid #D8E3EF
					border-radius 4px
					overscroll-behavior contain

					ul
						list-style none
						padding 0
						margin 0

						li
							display flex
							padding 7px 10px
							border 1px transparent solid
							cursor pointer
							border-radius 4px
							position relative
							margin-bottom -1px
							z-index 1
							font-size 12px
							align-items center
							transition all 0.1s
							width 100%

							.data
								display flex
								align-items center
								user-select none

								.infos
									display flex
									flex 1
									flex-direction column
									text-transform capitalize

									.label
										font-size 13px
										line-height 13px
										font-weight 400
										word-break break-word
										white-space normal
										margin-bottom 0
										color #333

									.text
										font-size 10px
										opacity 0.8

							&:hover
								border 1px #ccc solid

							&.active
								border 1px #5FB0FF dotted
								z-index 2
								background #FFF

			.control
				display flex
				justify-content flex-end
				padding 10px 15px
				border-top 1px #eee dotted

				.btn-cancel
					height 35px
					background transparent
					border none
					color #334e66
					text-decoration underline
					cursor pointer
					margin-left 20px
					font-size 12px
					white-space nowrap

					&:hover
						color #2693FF

				.btn-apply
					height 32px
					border-radius 3px
					background #0B85FD
					color #FFF
					border none
					cursor pointer
					padding 0 15px
					font-weight 500
					white-space nowrap
					margin-left 10px

.ui-select.open
	z-index 10

.no-items
	text-align center
	padding 20px
	background #EBF2F7
	color #85A1BE
	border-radius 4px

.options--open-down
	top 100%
	margin-top 5px

.options--open-up
	bottom 100%
	margin-bottom 5px

.ui-select.md .ui-select-box .selected
	height 40px
	line-height 38px

.ui-select.lg .ui-select-box .selected
	height 48px
	line-height 46px